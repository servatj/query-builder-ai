{
  "name": "query-builder-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "AI-powered query builder with React frontend and Node.js backend",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "dev:landing": "cd landing && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "build:landing": "cd landing && npm run build",
    "test": "npm run test:backend",
    "test:frontend": "cd packages/frontend && npm run test",
    "test:frontend:watch": "cd packages/frontend && npm run test:watch",
    "test:frontend:coverage": "cd packages/frontend && npm run test:coverage",
    "test:backend": "cd packages/backend && npm run test",
    "test:backend:watch": "cd packages/backend && npm run test:watch",
    "test:backend:coverage": "cd packages/backend && npm run test:coverage",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd packages/frontend && npm run lint",
    "start": "npm run start:backend",
    "start:backend": "cd packages/backend && npm start",
    "start:landing": "cd landing && npm run preview",
    "clean": "rm -rf packages/*/node_modules packages/*/dist packages/*/build",
    "reset": "npm run clean && npm install",
    "postinstall": "npm run setup-env",
    "setup-env": "[ ! -f packages/backend/.env ] && cp packages/backend/.env.example packages/backend/.env || true",
    "schema:generate": "cd packages/backend && npm run schema:generate"
  },
  "keywords": [
    "ai",
    "sql",
    "query-builder",
    "natural-language",
    "react",
    "typescript",
    "mysql",
    "monorepo"
  ],
  "author": "Your Name",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/query-builder.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  }
}
