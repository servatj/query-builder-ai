---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import DocsLayout from '../../layouts/DocsLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export const getStaticPaths = (async () => {
    const docPages = await getCollection('docs');
    return docPages.map(doc => ({
        params: { slug: doc.slug },
        props: { doc },
    }));
}) satisfies GetStaticPaths;

const { doc } = Astro.props;
const { Content, headings } = await doc.render();

// Extract title from frontmatter or first heading
const title = doc.data.title || headings.find(h => h.depth === 1)?.text || doc.slug;
const description = doc.data.description || `Documentation for ${title}`;
---

<Header />
<DocsLayout title={`${title} - Maisql Docs`} description={description}>
    <article class="doc-article">
        <h1 class="doc-title">{title}</h1>
        <div class="doc-content">
            <Content />
        </div>
        
        {headings.length > 1 && (
            <aside class="doc-toc">
                <h3 class="doc-toc-title">On This Page</h3>
                <nav class="doc-toc-nav">
                    {headings
                        .filter(h => h.depth <= 3 && h.depth > 1)
                        .map(heading => (
                            <a 
                                href={`#${heading.slug}`}
                                class:list={['doc-toc-link', `depth-${heading.depth}`]}
                            >
                                {heading.text}
                            </a>
                        ))
                    }
                </nav>
            </aside>
        )}
    </article>
</DocsLayout>
<Footer />

<style>
    .doc-article {
        position: relative;
    }

    .doc-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--gray-900);
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid var(--purple-200);
    }

    .doc-content {
        line-height: 1.8;
        color: var(--gray-700);
    }

    /* Markdown content styling */
    .doc-content :global(h1),
    .doc-content :global(h2),
    .doc-content :global(h3),
    .doc-content :global(h4),
    .doc-content :global(h5),
    .doc-content :global(h6) {
        color: var(--gray-900);
        font-weight: 600;
        margin-top: 2rem;
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    .doc-content :global(h1) {
        font-size: 2.25rem;
        margin-top: 0;
    }

    .doc-content :global(h2) {
        font-size: 1.875rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--gray-200);
    }

    .doc-content :global(h3) {
        font-size: 1.5rem;
    }

    .doc-content :global(h4) {
        font-size: 1.25rem;
    }

    .doc-content :global(p) {
        margin-bottom: 1.25rem;
    }

    .doc-content :global(a) {
        color: var(--purple-600);
        text-decoration: none;
        border-bottom: 1px solid var(--purple-300);
        transition: all 0.2s ease;
    }

    .doc-content :global(a:hover) {
        color: var(--purple-700);
        border-bottom-color: var(--purple-700);
    }

    .doc-content :global(ul),
    .doc-content :global(ol) {
        margin-bottom: 1.25rem;
        padding-left: 2rem;
    }

    .doc-content :global(li) {
        margin-bottom: 0.5rem;
    }

    .doc-content :global(code) {
        background: var(--gray-100);
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        font-family: 'Courier New', 'Monaco', monospace;
        font-size: 0.9em;
        color: var(--purple-700);
    }

    .doc-content :global(pre) {
        background: var(--gray-900);
        color: var(--gray-100);
        padding: 1.5rem;
        border-radius: 8px;
        overflow-x: auto;
        margin-bottom: 1.25rem;
        border: 1px solid var(--gray-700);
    }

    .doc-content :global(pre code) {
        background: none;
        padding: 0;
        color: inherit;
        font-size: 0.875rem;
    }

    .doc-content :global(blockquote) {
        border-left: 4px solid var(--purple-400);
        padding-left: 1.5rem;
        margin: 1.5rem 0;
        color: var(--gray-600);
        font-style: italic;
    }

    .doc-content :global(table) {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1.5rem;
        font-size: 0.9375rem;
    }

    .doc-content :global(th),
    .doc-content :global(td) {
        padding: 0.75rem;
        text-align: left;
        border: 1px solid var(--gray-300);
    }

    .doc-content :global(th) {
        background: var(--gray-100);
        font-weight: 600;
        color: var(--gray-900);
    }

    .doc-content :global(tr:nth-child(even)) {
        background: var(--gray-50);
    }

    .doc-content :global(img) {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 1.5rem 0;
    }

    .doc-content :global(hr) {
        border: none;
        border-top: 2px solid var(--gray-200);
        margin: 2rem 0;
    }

    /* Table of Contents */
    .doc-toc {
        position: fixed;
        right: 2rem;
        top: 120px;
        width: 220px;
        max-height: calc(100vh - 160px);
        overflow-y: auto;
        padding: 1.5rem;
        background: var(--white);
        border: 1px solid var(--gray-200);
        border-radius: 8px;
    }

    .doc-toc-title {
        font-size: 0.875rem;
        font-weight: 700;
        color: var(--gray-900);
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .doc-toc-nav {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .doc-toc-link {
        color: var(--gray-600);
        text-decoration: none;
        font-size: 0.875rem;
        line-height: 1.4;
        transition: color 0.2s ease;
    }

    .doc-toc-link:hover {
        color: var(--purple-600);
    }

    .doc-toc-link.depth-3 {
        padding-left: 1rem;
        font-size: 0.8125rem;
    }

    @media (max-width: 1400px) {
        .doc-toc {
            display: none;
        }
    }

    @media (max-width: 768px) {
        .doc-title {
            font-size: 2rem;
        }

        .doc-content :global(h2) {
            font-size: 1.5rem;
        }

        .doc-content :global(h3) {
            font-size: 1.25rem;
        }
    }
</style>
