# Query Builder Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# AI Provider Configuration
# ===========================================

# Anthropic API Key (Default Provider)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI API Key (Alternative Provider)
# Get your API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-your-openai-key-here

# ===========================================
# Database Configuration (for Docker)
# ===========================================
# These are used by docker-compose for initial setup
MYSQL_ROOT_PASSWORD=rootpass123
MYSQL_DATABASE=query_builder
MYSQL_USER=queryuser
MYSQL_PASSWORD=querypass

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=production
PORT=3001
SANDBOX_MODE=false

# Frontend API URL (used during build)
VITE_API_URL=http://localhost:3001
