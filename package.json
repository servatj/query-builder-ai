{
  "name": "query-builder-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "AI-powered query builder with React frontend and Node.js backend",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "jest --selectProjects backend",
    "test:frontend": "jest --selectProjects frontend",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/unit",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd packages/frontend && npm run lint",
    "start": "npm run start:backend",
    "start:backend": "cd packages/backend && npm start",
    "clean": "rm -rf packages/*/node_modules packages/*/dist packages/*/build",
    "reset": "npm run clean && npm install",
    "postinstall": "npm run setup-env",
    "setup-env": "[ ! -f packages/backend/.env ] && cp packages/backend/.env.example packages/backend/.env || true"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.1.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^26.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1"
  },
  "keywords": [
    "ai",
    "sql",
    "query-builder",
    "natural-language",
    "react",
    "typescript",
    "mysql",
    "monorepo"
  ],
  "author": "Your Name",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/query-builder.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
